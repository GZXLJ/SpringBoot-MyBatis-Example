<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yuxeng.display.usermodel.UserDao">
    <!--namespace根据自己需要创建的的mapper的路径和名称填写-->
    <select id="findById" resultType="com.yuxeng.display.usermodel.User">
        select * from tb_user where id=#{id}
    </select>
    <insert id="insert" useGeneratedKeys = "true" keyProperty="id" keyColumn="id">
        INSERT INTO tb_user(username, password, real_name,
                            gender, phone_number, email,
                            max_borrow_days, max_borrow_books)
            VALUES
            (#{username}, #{password},
             #{real_name}, #{gender}, #{phone_number},
             #{email}, #{max_borrow_days}, #{max_borrow_books})
    </insert>
    <select id="findByUsername" resultType="com.yuxeng.display.usermodel.User">
        select  * from tb_user where username=#{username}
    </select>
</mapper>
