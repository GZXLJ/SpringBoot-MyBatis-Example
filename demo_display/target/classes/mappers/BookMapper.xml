<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuxeng.display.bookmodel.Dao.BookDao">

  <!-- 根据id获取书籍 -->
  <select id="selectBookById" resultType="com.yuxeng.display.bookmodel.Pojo.Book">
    SELECT * FROM tb_book WHERE id = #{id}
  </select>

  <!-- 获取所有书籍 -->
  <select id="selectAllBooks" resultType="com.yuxeng.display.bookmodel.Pojo.Book">
    SELECT * FROM tb_book
  </select>

  <!-- 关键词搜索书籍数量 -->
  <select id="selectBookByKeyword_int" resultType="int">
    SELECT COUNT(*)
    FROM tb_book
    <where>
      <if test="keyword != null">
        (title LIKE CONCAT('%', #{keyword}, '%')
        OR author LIKE CONCAT('%', #{keyword}, '%')
        OR publisher LIKE CONCAT('%', #{keyword}, '%'))
      </if>
    </where>
  </select>

  <!-- 关键词搜索书籍 -->
  <select id="selectBookByKeyword" resultType="com.yuxeng.display.bookmodel.Pojo.Book">
    SELECT * FROM tb_book
    <where>
      <if test="keyword != null">
        (title LIKE CONCAT('%', #{keyword}, '%')
        OR author LIKE CONCAT('%', #{keyword}, '%')
        OR publisher LIKE CONCAT('%', #{keyword}, '%'))
      </if>
    </where>
  </select>

  <!-- 获取特定分类书籍数量 -->
  <select id="selectBookByCategory_int" resultType="int">
    SELECT COUNT(*)
    FROM tb_book
    WHERE category_id = #{category_id}
  </select>

  <!-- 获取特定分类的书籍 -->
  <select id="selectBookByCategory" resultType="com.yuxeng.display.bookmodel.Pojo.Book">
    SELECT * FROM tb_book
    WHERE category_id = #{category_id}
  </select>

<!--  &lt;!&ndash; 获取所有分类 &ndash;&gt;-->
<!--  <select id="selectAllCategory" resultType="com.yuxeng.display.bookmodel.Pojo.BookCategory">-->
<!--    SELECT * FROM tb_book_category-->
<!--  </select>-->

  <!-- 删除书籍 -->
  <delete id="deleteBook">
    DELETE FROM tb_book WHERE id = #{id}
  </delete>

  <!-- 插入新书籍 -->
  <insert id="insertBook">
    INSERT INTO tb_book (title, author, category_id, publisher, quantity, created_at)
    VALUES (#{title}, #{author}, #{category_id}, #{publisher}, #{quantity}, #{created_at})
  </insert>

  <!-- 更新书籍 -->
  <update id="updateBook">
    UPDATE tb_book
    <set>
      <if test="title != null"> title = #{title}, </if>
      <if test="author != null"> author = #{author}, </if>
      <if test="category_id != null"> category_id = #{category_id}, </if>
      <if test="publisher != null"> publisher = #{publisher}, </if>
      <if test="quantity != null"> quantity = #{quantity}, </if>
      <if test="created_at != null"> created_at = #{created_at}, </if>
    </set>
    WHERE id = #{id}
  </update>

</mapper>
